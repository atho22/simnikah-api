  "staff_operations": {
    "verify_formulir_approve": {
      "url": "/simnikah/staff/verify-formulir/:id",
      "method": "POST",
      "auth_required": true,
      "role": "staff",
      "body": {
        "approved": true,
        "catatan": "Formulir sudah lengkap dan sesuai"
      }
    },
    "verify_formulir_reject": {
      "url": "/simnikah/staff/verify-formulir/:id",
      "method": "POST",
      "auth_required": true,
      "role": "staff",
      "body": {
        "approved": false,
        "catatan": "Data NIK tidak valid, silakan perbaiki"
      }
    },
    "verify_berkas": {
      "url": "/simnikah/staff/verify-berkas/:id",
      "method": "POST",
      "auth_required": true,
      "role": "staff",
      "body": {
        "approved": true,
        "catatan": "Berkas lengkap dan sesuai dengan data online"
      }
    }
  },
  
  "penghulu_operations": {
    "assign_penghulu": {
      "url": "/simnikah/pendaftaran/:id/assign-penghulu",
      "method": "POST",
      "auth_required": true,
      "role": "kepala_kua",
      "body": {
        "penghulu_id": 1
      }
    },
    "verify_documents": {
      "url": "/simnikah/penghulu/verify-documents/:id",
      "method": "POST",
      "auth_required": true,
      "role": "penghulu",
      "body": {
        "approved": true,
        "catatan": "Dokumen sudah sesuai dan lengkap"
      }
    }
  },
  
