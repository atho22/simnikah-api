# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=simnikah

# JWT Configuration
JWT_KEY=your-super-secret-jwt-key-minimum-32-characters-long

# Server Configuration
PORT=8080
GIN_MODE=release

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Example: ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend-domain.com
# If not set, defaults to common development ports (3000, 3001, 5173, 5174, 8080)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

